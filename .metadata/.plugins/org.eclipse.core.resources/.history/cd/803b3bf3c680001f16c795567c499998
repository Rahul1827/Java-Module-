//3.Find the second maximum and second minimum Elements of an array.


package Assignment27Sep;
import java.util.Arrays;
import java.util.Scanner;

public class Ques3 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Scanner sc= new Scanner(System.in);
		
		int size;
		System.out.println("Enter the size of the array");
		
		size=sc.nextInt();
		
		int ar[] = new int[size];
		
		System.out.println("Enter the elements of the array....");
		for(int i=0;i<size;i++)
		{
			ar[i]=sc.nextInt();
			
		}
		System.out.println("***************************************************************");
		System.out.println("***************************************************************");    
		
		System.out.println("Your Array is ");
		
		for(int i=0;i<size;i++)
		{
			
			System.out.println("Index "+i+ ":"+ar[i]);
			
			Arrays.sort(ar);
		}
		System.out.println("***************************************************************");
		System.out.println("***************************************************************");    
		System.out.println("Minimum of second is "+ar[1]);
		System.out.println("Maximum of second is"+ar[size-2]);
              
		
	
	}

}
